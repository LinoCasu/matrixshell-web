      "1": { "text": "Explain freedom.", "next": "neo_12" },
      "2": { "text": "Is it dangerous?", "next": "neo_12" },
      "3": { "text": "Exit.", "next": null }
    }
  },
  "neo_12": {
    "speaker": "Neo",
    "text": "Truth can be painful, but it makes you strong.",
    "options": {
