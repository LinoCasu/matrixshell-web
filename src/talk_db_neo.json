{
  "neo_01": {
    "speaker": "Neo",
    "text": "Welcome, Neo. Have you ever wondered what is truly real?",
    "options": {
      "1": { "text": "Tell me more.", "next": "neo_02" },
      "2": { "text": "What do you mean by real?", "next": "neo_02" },
      "3": { "text": "Exit.", "next": null }
